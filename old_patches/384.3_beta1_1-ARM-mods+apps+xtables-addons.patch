+
+/**
+ * @peer
+ * @info
+ * @port
+ * @return: 1 success, 0 failure
+ */
+static inline bool
+is_wrong_knock(const struct peer *peer, const struct xt_pknock_mtinfo *info,
+		uint16_t port)
+{
+	return peer != NULL && info->port[peer->accepted_knock_count] != port;
