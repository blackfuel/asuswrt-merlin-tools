+{
+	struct peer *peer = kmalloc(sizeof(*peer), GFP_ATOMIC);
+
+	if (peer == NULL)
+		return NULL;
+
+	INIT_LIST_HEAD(&peer->head);
+	peer->ip	= ip;
+	peer->proto	= proto;
+	peer->timestamp = jiffies/HZ;
+	peer->login_sec = 0;
+	reset_knock_status(peer);
