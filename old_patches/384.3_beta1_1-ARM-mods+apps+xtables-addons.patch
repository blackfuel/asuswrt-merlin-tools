+
+/**
+ * @peer
+ * @max_time
+ * @return: 1 time exceeded, 0 still valid
+ */
+static inline bool
+is_interknock_time_exceeded(const struct peer *peer, unsigned int max_time)
+{
+	return peer != NULL && time_after(jiffies / HZ,
+	       peer->timestamp + max_time);
