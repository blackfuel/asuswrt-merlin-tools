+/**
+ * Alloc a hashtable with n buckets.
+ *
+ * @size
+ * @return: hashtable
+ */
+static struct list_head *
+alloc_hashtable(unsigned int size)
+{
+	struct list_head *hash;
+	unsigned int i;
+
+	hash = kmalloc(sizeof(*hash) * size, GFP_KERNEL);
+	if (hash == NULL)
+		return NULL;
+	for (i = 0; i < size; ++i)
+		INIT_LIST_HEAD(&hash[i]);
+
+	return hash;
+}
