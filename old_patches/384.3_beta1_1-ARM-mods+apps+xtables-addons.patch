+		seq_printf(s, "accepted_knock_count=%lu ",
+			(unsigned long)peer->accepted_knock_count);
+		if (peer->status == ST_MATCHING) {
+			time = 0;
+			if (time_before(jiffies / HZ, peer->timestamp +
+			    rule->max_time))
+				time = peer->timestamp + rule->max_time -
